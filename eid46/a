<body>
    <div class="container">
        <h1>Name on Image Generator</h1>
        
        <div class="instructions">
            Enter your name to add it to the image. Your name will appear at the bottom center.
        </div>
        
        <div class="form-group">
            <input type="text" id="nameInput" placeholder="Enter your name" autocomplete="off">
        </div>
        
        <button id="generateBtn">Create Your Image</button>
        
        <div id="resultContainer" style="display: none;">
            <img id="baseImage" src="eid46.jpg" alt="Base image">
            <div id="nameOverlay"></div>
        </div>
        
        <button id="downloadBtn">Download Image</button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const nameInput = document.getElementById('nameInput');
            const generateBtn = document.getElementById('generateBtn');
            const resultContainer = document.getElementById('resultContainer');
            const nameOverlay = document.getElementById('nameOverlay');
            const baseImage = document.getElementById('baseImage');
            const downloadBtn = document.getElementById('downloadBtn');
            
            // When the page loads, we'd normally set the actual image path here
            // For this demo, we're using a placeholder
            // baseImage.src = "image1.png";
            
            generateBtn.addEventListener('click', function() {
                const name = nameInput.value.trim();
                if (!name) {
                    alert('Please enter your name');
                    return;
                }
                
                // Display the image with the name overlay
                // Using the fixed settings: X: 50%, Y: 80%, Size: 140px, Color: white
                nameOverlay.textContent = name;
                nameOverlay.style.fontSize = '140px';
                nameOverlay.style.color = 'white';
                nameOverlay.style.left = '50%';
                nameOverlay.style.top = '80%';
                
                resultContainer.style.display = 'inline-block';
                downloadBtn.style.display = 'inline-block';
            });
            
            downloadBtn.addEventListener('click', function() {
                // In a real application, you would need to use a canvas to render
                // the image with the text overlay and allow downloading
                alert('Your personalized image is being generated for download!');
                
                // The full implementation would use canvas to combine the image and text:
                /*
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                canvas.width = baseImage.width;
                canvas.height = baseImage.height;
                
                // Draw the image
                ctx.drawImage(baseImage, 0, 0);
                
                // Draw the text
                ctx.font = '140px Arial';
                ctx.fillStyle = 'white';
                const x = canvas.width * 0.5; // 50%
                const y = canvas.height * 0.8; // 80%
                ctx.textAlign = 'center';
                ctx.fillText(nameInput.value, x, y);
                
                // Create download link
                const link = document.createElement('a');
                link.download = 'personalized-image.png';
                link.href = canvas.toDataURL('image/png');
                link.click();
                */
            });

            // Allow generating the image by pressing Enter
            nameInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    generateBtn.click();
                }
            });
        });
    </script>
